{
  "manifest_version": 3,
  "name": "Memory Trail",
  "version": "1.0",
  "description": "Leave sticky notes on any webpage and see them when you come back.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_title": "Memory Trail",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
